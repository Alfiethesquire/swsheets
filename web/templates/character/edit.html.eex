            <div class="row">
              <div class="col-md-6">
                <h4>Gear</h4>
                <textarea rows=16 class="form-control col-offset-2 col-md-8"></textarea>
              </div>
              <div class="col-md-6">
                <div class="row">
                  <div class="col-md-6">
                    <div class="panel panel-default">
                      <div class="panel-body">
                        <input type="number" step="1" class="form-control" min=0 id="credits" />
